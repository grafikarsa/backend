# =============================================================================
# GRAFIKARSA BACKEND - PRODUCTION ENVIRONMENT
# =============================================================================
# PENTING: Copy file ini ke .env dan ganti semua nilai dengan production values
# JANGAN commit file .env ke repository!
# =============================================================================

# Application
APP_ENV=production
APP_PORT=8080
APP_URL=https://api.grafikarsa.com

# Database (PostgreSQL)
# NOTE: When using docker-compose.prod.yml, DB_HOST is overridden to 'postgres'
# Only change this if using external database (e.g., RDS, Cloud SQL)
DB_HOST=postgres
DB_PORT=5432
DB_USER=grafikarsa_prod
DB_PASSWORD=GANTI_DENGAN_PASSWORD_KUAT_32_CHAR
DB_NAME=grafikarsa_prod
DB_SSLMODE=require

# MinIO (Object Storage)
# NOTE: When using docker-compose.prod.yml, MINIO_ENDPOINT is overridden to 'minio:9000'
# Only change this if using external storage (e.g., S3, external MinIO)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=GANTI_DENGAN_ACCESS_KEY_BARU
MINIO_SECRET_KEY=GANTI_DENGAN_SECRET_KEY_BARU_32_CHAR
MINIO_BUCKET=grafikarsa
MINIO_USE_SSL=true
STORAGE_PUBLIC_URL=https://cdn.grafikarsa.com

# JWT Authentication
# PENTING: Generate secret baru dengan: openssl rand -hex 32
JWT_ACCESS_SECRET=GANTI_DENGAN_SECRET_BARU_64_CHAR_HEX
JWT_REFRESH_SECRET=GANTI_DENGAN_SECRET_BERBEDA_64_CHAR_HEX
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# Admin Configuration
# PENTING: Ganti dengan path rahasia yang sulit ditebak
ADMIN_LOGIN_PATH=GANTI_DENGAN_PATH_RAHASIA

# CORS (comma-separated origins)
CORS_ORIGINS=https://grafikarsa.com,https://www.grafikarsa.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m
